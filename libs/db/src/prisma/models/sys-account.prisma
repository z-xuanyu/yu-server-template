model SysAccount {
  id        Int              @id @default(autoincrement())
  name      String
  avatar    String           @default("")
  email     String           @unique
  password  String
  roles     SysAccountRole[]
  deptId    Int?
  dept      SysDept?         @relation(fields: [deptId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  status    Int              @default(1)
  remark    String           @default("")
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@map("sys_account")
}
