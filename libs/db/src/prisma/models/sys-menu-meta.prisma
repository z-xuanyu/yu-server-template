model SysMenuMeta {
  id                 Int      @id @default(autoincrement())
  title              String?  @default("") // 用于配置页面的标题，会在菜单和标签页中显示。一般会配合国际化使用。
  icon               String?  @default("") // 用于配置页面的图标，会在菜单和标签页中显示。一般会配合图标库使用，如果是http链接，会自动加载图片。
  activeIcon         String?  @default("") // 用于配置页面的激活图标，会在菜单中显示。一般会配合图标库使用，如果是http链接，会自动加载图片。
  keepAlive          Boolean? @default(false) // 用于配置页面是否开启缓存，开启后页面会缓存，不会重新加载，仅在标签页启用时有效。
  hideInMenu         Boolean? @default(false) // 用于配置页面是否在菜单中隐藏，隐藏后页面不会在菜单中显示。
  hideInTab          Boolean? @default(false) // 用于配置页面是否在标签页中隐藏，隐藏后页面不会在标签页中显示。
  hideInBreadcrumb   Boolean? @default(false) // 用于配置页面是否在面包屑中隐藏，隐藏后页面不会在面包屑中显示。
  hideChildrenInMenu Boolean? @default(false) // 用于配置页面的子页面是否在菜单中隐藏，隐藏后子页面不会在菜单中显示。
  badge              String?  @default("") // 用于配置页面的徽标，会在菜单显示。
  order              Int?     @default(0) // 用于配置页面的排序，会在菜单中显示。
  menuId             Int      @unique
  menu               SysMenu? @relation(fields: [menuId], references: [id], onDelete: Cascade)

  @@map("sys_menu_meta")
}
