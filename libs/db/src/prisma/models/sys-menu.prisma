model SysMenu {
  id          Int                 @id @default(autoincrement())
  name        String
  parentId    Int?
  path        String
  component   String?
  redirect    String?
  meta        SysMenuMeta?
  roles       SysRoleMenu[]
  permissions SysMenuPermission[]
  parent      SysMenu?            @relation("menu_relation", fields: [parentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  children    SysMenu[]           @relation("menu_relation")
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@map("sys_menu")
}
