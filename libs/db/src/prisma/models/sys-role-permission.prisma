// 关联表：角色 ↔ 权限 (多对多)
model SysRolePermission {
  roleId       Int
  permissionId Int
  role         SysRole       @relation(fields: [roleId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  permission   SysPermission @relation(fields: [permissionId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  createdAt    DateTime      @default(now())

  @@id([roleId, permissionId])
  @@map("sys_role_permission")
}
