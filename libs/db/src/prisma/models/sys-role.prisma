model SysRole {
  id          Int                 @id @default(autoincrement())
  name        String
  code        String
  remark      String
  userRole    SysUserRole[]
  permissions SysRolePermission[]
  menus       SysRoleMenu[]
  status      Int                 @default(1)
  sort        Int                 @default(0)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@map("sys_role")
}
