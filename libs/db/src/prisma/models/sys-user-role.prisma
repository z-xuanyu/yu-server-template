// 关联表：用户 ↔ 角色 (多对多)
model SysUserRole {
  userId Int
  roleId    Int
  user   SysUser @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  role      SysRole    @relation(fields: [roleId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([userId, roleId])
  @@map("sys_user_role")
}
