model SysUser {
  id        Int               @id @default(autoincrement())
  name      String
  avatar    String            @default("")
  email     String            @unique
  phone     String?           @default("")
  gender    Int               @default(0) // 0:未知 1:男 2:女
  password  String
  roles     SysUserRole[]
  deptId    Int?
  dept      SysDept?          @relation(fields: [deptId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  loginLogs SysUserLoginLog[] // 登录日志
  status    Int               @default(1) // 0:禁用 1:正常
  remark    String            @default("")
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  @@map("sys_user")
}
